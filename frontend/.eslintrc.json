{
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "no-console": "warn",
    "prefer-const": "warn"
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "*.config.js",
    "*.config.ts"
  ]
} 